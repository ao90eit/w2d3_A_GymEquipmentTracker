<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity"
    android:background="@drawable/workout_room_fit"
    android:layout_margin="0dp" >

    <ImageView
        android:id="@+id/title_icon_imageView"
        style="@style/StackedImages"
        android:layout_width="0dp"
        android:layout_height="264dp"
        android:src="@drawable/ic_dumbbell_icon"
        app:layout_constraintBottom_toTopOf="@+id/guide_horiz_55"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageButton
        android:id="@+id/add_equipment_imageButton"
        style="@style/GeneralButtonStyle"
        android:src="@drawable/ic_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guide_horiz_55" />

    <ImageButton
        android:id="@+id/view_equipment_imageButton"
        style="@style/GeneralButtonStyle"
        app:layout_constraintTop_toBottomOf="@id/add_equipment_imageButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_eye" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_horiz_55"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".55" />

<!--    app:layout_constraintTop_toBottomOf="@id/app_title_imageView"-->

</androidx.constraintlayout.widget.ConstraintLayout>